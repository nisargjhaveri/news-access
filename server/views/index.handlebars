<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>News Access</title>
        <base href="{{baseUrl}}">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
        <link rel="stylesheet" href="static/css/build/common.css">
        <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="socket.io/socket.io.js"></script>
        <script>
            var baseUrl = "{{baseUrl}}";
            var articleSource = "{{articleSource}}";
            var availableSources = {{{availableSources}}};
        </script>
        <script src="static/js/index.js"></script>
    </head>
    <body>
        <div class="header-container">
            <div class="header">
                <h1><a href="{{baseUrl}}" class="link-home">News Access</a></h1>
                <div class="access-options">
                    <label>
                        Source:
                        <select class="select-source inline">
                            <option value="pti">PTI</option>
                            <option value="thehindu">The Hindu</option>
                            <option value="indianexpress">The Indian Express</option>
                        </select>
                    </label>
                </div>
            </div>
        </div>
        <div class="article-list loading"></div>
        <div class="hidden">
            <article id="sample-article" class="clear-fix">
                <div class="img-wrapper float-left">
                    <img src="" alt="Image" class="show-image small-img">
                </div>
                <div class="news-heading">
                    <h2><a href="#" class="link-article show-title"></a></h2>
                    <a href="#" class="link-original-article show-source"></a>
                    <span class="show-published-time"></span>
                    <a href="#" class="link-workbench">Edit in workbench</a>
                </div>
            </article>
        </div>
        {{> panic-error}}
        {{> analytics}}
    </body>
</html>
