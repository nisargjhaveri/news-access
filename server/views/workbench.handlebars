<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Workbench - News Access</title>
        <base href="{{baseUrl}}">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
        <link rel="stylesheet" href="static/css/build/common.css">
        <link rel="stylesheet" href="static/css/build/workbench.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
        <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/Sortable/1.5.1/Sortable.min.js"></script>
        <script src="socket.io/socket.io.js"></script>
        <script>
            var baseUrl = "{{baseUrl}}";
            var articleSource = "{{articleSource}}";
            var articleId = "{{articleId}}";
        </script>
        <script src="static/js/workbench.js"></script>
    </head>
    <body class="flex-column">
        <div class="bench-header flex-row">
            <h1>Workbench - News Access</h1>
            <div class="flex-item"></div>
            <div class="bench-options flex-column flex-center">
                <div class="flex-item"></div>
                <div>
                    <span class="display-username">Hello, {{username}}.</span>
                    <a href="logout" class="link-action">Logout</a>
                </div>
                <div class="flex-item"></div>
                <label>
                    <select class="select-language inline">
                        <option value="hi">Hindi</option>
                        <option value="gu">Gujarati</option>
                        <option value="bn">Bengali</option>
                        <option value="kn">Kannada</option>
                        <option value="ml">Malayalam</option>
                        <option value="mr">Marathi</option>
                        <option value="ne">Nepali</option>
                        <option value="pa">Punjabi</option>
                        <option value="sd">Sindhi</option>
                        <option value="ta">Tamil</option>
                        <option value="te">Telugu</option>
                        <option value="ur">Urdu</option>
                    </select>
                </label>
                <div class="flex-item"></div>
            </div>
        </div>
        <div class="bench-container flex-row flex-item loading">
            <div class="flex-item flex-2 bench-article-container">
                <div class='article-title flex-row'>
                    <h2 class="flex-item article-title-source"></h2>
                    <h2 class="flex-item article-title-target ce-text-only" contenteditable="true"></h2>
                </div>
                <div class="article-body flex-item"></div>
            </div>
            <div class="flex-item flex-column bench-summary-container">
                <div class="flex-item flex-column summary-source-container">
                    <p class="paragraph paragraph-draggable summary summary-source flex-item"></p>
                    <div class="summary-status-container hidden">
                        <span class="summary-source-status-char"></span> characters
                    </div>
                    <div class="summary-bin-container flex-row hidden">
                        <div class="flex-item"></div>
                        <div class="summary-bin fa fa-trash-o"></div>
                        <div class="flex-item"></div>
                    </div>
                </div>
                <div class="flex-item flex-column">
                    <p class="paragraph summary summary-target flex-item"></p>
                    <div class="summary-status-container hidden">
                        <span class="summary-target-status-char"></span> characters
                    </div>
                    <input type="submit" value="Publish" class="publish-btn hidden">
                </div>
            </div>
        </div>
        <div class="whats-next-container flex-item loading hidden">
            <div class="whats-next">
                <div class="whats-next-text info-line">
                    <span class="here-is-more hidden">Here is an article you can edit next!</span>
                    <span class="nothing-more hidden">Yaay! No more articles to edit!</span>
                </div>
                <div class="article-list hidden">
                    <article id="whats-next-article" class="clear-fix">
                        <div class="img-wrapper float-left">
                            <img src="" alt="Image" class="show-image small-img">
                        </div>
                        <div class="news-heading">
                            <h2 class="show-title"></h2>
                            <span class="show-source"></span>
                            <span class="show-published-time"></span>
                            <a href="#" class="link-workbench">Edit in workbench</a>
                        </div>
                    </article>
                </div>
            </div>
        </div>
        {{> panic-error}}
        {{> analytics}}
    </body>
</html>
